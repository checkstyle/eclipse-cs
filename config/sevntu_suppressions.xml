<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.1//EN"
        "https://checkstyle.org/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- START of legacy code, all violations will be resolved eventually -->
    <suppress checks="IllegalCatchExtended"
             files=".*"
             />
    <suppress checks="MultipleStringLiteralsExtended"
             files=".*"
             />
    <suppress checks="LineLengthExtended"
             files=".*"
             />
    <suppress checks="ConstructorWithoutParams"
             files=".*"
             />
    <suppress checks="ReturnCountExtended"
             files=".*"
             />
    <suppress checks="MoveVariableInsideIf"
             files=".*"
             />
    <!-- END of legacy code -->

    <!-- Messages.java are generated by the Eclipse localization wizard, therefore field order is generally not managed by human editors -->
    <suppress checks="CustomDeclarationOrder"
             files="Messages.java"
             />
</suppressions>
